{{#> layout title='Edit Project' user=user}}

  <main class="contact-section">
    <div class="form-edit">
    <form action="/project-update{{data.id}}?_method=patch" method="post" class="contact-form-edit" enctype="multipart/form-data">
      <div class="form-title">
        <h2>EDIT PROJECT</h2>
      </div>
      <div class="form-field">
        <label for="name">Project Name</label>
        <input id="name" name="name" class="form-input" type="text" value="{{data.name}}" required />
      </div>
      <div></div>
      <div class="form-date">
        <div class="form-field-date">
          <label for="sdate">Start Date</label>
          <input id="sdate" name="sdate" class="form-input-date" type="date" min="2023-01-01" max="2030-12-31"
          value="{{formatDate data.sdate}}"
            required />
        </div>
        <div class="form-field-date">
          <label for="edate">End Date</label>
          <input id="edate" name="edate" class="form-input-date" type="date" min="2023-01-01" max="2030-12-31"
           value="{{formatDate data.edate}}" required />

        </div>
      </div>

      <div class="form-field-area">
        <label class="message-contact" for="message">Your Message</label>
        <textarea rows="6" id="message" name="message" class="form-input-area" required>{{data.message}}</textarea>
      </div>

      <div class="form-field-box">
        <div>
          <label>Technologies</label>
        </div>
      </div>
      <div class="form-input-box" >
        <div>
          <input type="checkbox" id="" name="technologies" value="nodejs" {{checkboxInputa data.technologies}}>
          <label for="nodejs">Node Js</label><br>
          <input type="checkbox" id="" name="technologies" value="nextjs" {{checkboxInputb data.technologies}}>
          <label for="nextjs">Next Js</label>
        </div>
        <div>
          <input type="checkbox" id="" name="technologies" value="reachjs" {{checkboxInputc data.technologies}}>
          <label for="reachjs">Reach Js</label><br>
          <input type="checkbox" id="typescript" name="technologies" value="typescript" {{checkboxInputd data.technologies}} >
          <label for="TypeScript">TypeScript</label>
        </div>
      </div>



      <div class="form-field-image">       
          <label for="image" class="form-label">Upload Image</label>
          <input id="image" name="image" class="form-control form-input" type="file" accept=".png, .jpg, .jpeg" href="/Asset/image/blog-image.png">
      </div>

            
      <div ><button id="button-edit"  type="submit" class="form-submit-button d-none" hidden>Submit</button></div>       
      <div class="w-100 text-center">
          <img id="preview" src={{data.image}} alt="image preview" class="img-thumbnail" style="max-width: 100%"></img>
      </div>
      </form>
    <div class="form-button"><button onclick="return confirmEdit()" class="form-submit-button-edit mt-3 mr-0">Edit Project</button></div>
</div>
  
 <script src="/asset/js/image-preview.js"></script>
    
  </main>

{{/layout}}