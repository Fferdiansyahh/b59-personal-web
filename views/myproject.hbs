{{#> layout title='My Project' user=user}}

{{#if messages.error}}
<div class="alert alert-danger " role="alert">
  {{messages.error}}
</div>
{{/if}}

  <main class="contact-section">
      
    <section class="blog-container my-0">
     
      <div class=" project-title text-center">
              <p class="">MY PROJECT </p>    
      </div>
       {{#if user}}
       <div><a class="btn translate-middle-y btn-nav btn-add my-0" href="/project-add">Add Project</a></div>
      {{/if }}


      <div id="blogList" class="blog-list ">     

          {{#each blogs }}

         <div id="${i}" class="blog-list-item shadow">
          <div class="blog-image-title gap-2">
            <div class="blog-image ">
              <a href="/project-detail/{{this.id}}" >
              <img src={{this.image}} alt="blog-image" />
              </a>
            </div>
            <div>
              <p>
                <a href="/project-detail/{{this.id}}" class="blog-item-title">
                   {{this.name}}
                </a>
              </p>
              <div>
                <p class="detail-blog-content"> Duration : {{getDuring this.sdate this.edate}}</p>
                <p class="detail-blog-content"> Author   : {{this.user.username}}</p>
                <p class="detail-blog-content">{{formatDataToWIB this.createdAt}}</p>   
                          
              </div>
            </div>
          </div>
          <div class="gap-1">
            <p class="blog-text">
            {{truncateText this.message}}
            </p>
            <p class="relative-time">{{getRelativeTime this.createdAt}}</p>
          </div>
          <div id="menu" class="d-flex justify-content-center">
            <img class="{{classIconsa this.technologies}}" src="{{attributeIconsa this.technologies}}" alt=""></img> 
            <img class="{{classIconsb this.technologies}}" src="{{attributeIconsb this.technologies}}" alt=""></img>
            <img class="{{classIconsc this.technologies}}" src="{{attributeIconsc this.technologies}}" alt=""></img>
            <img class="{{classIconsd this.technologies}}" src="{{attributeIconsd this.technologies}}" alt=""></img> 
          </div>

{{!-- <div><button class="my-div" id="my-button-222">Change color</button></div> --}}

          <div class="blog-content">
            <div class="btn-group">  
              {{#if (equal ../user.id this.user_id)}}            
             <a href="/project-edit/{{this.id}} " class="col"><button class="btn-edit">Edit</button></a>                             
              <form action="/delete-project{{this.id}}?_method=delete" method="post" >
              <button id="mybutton-{{this.id}}"   class="btn-delete" hidden>Delete</button>                            
            
             </form>
             <button  onclick="return confirmDel({{this.id}})"  class="btn-delete">Delete</button>
              {{/if}}              
            </div>
              
            
          </div>
          </div>
          {{else}}
          <p>Belum ada yang di post</p> 
          {{/each}}



     
      </div>
    </section>

  </main>


{{/layout}}