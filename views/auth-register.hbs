{{#> layout title='Register' user=user}}

  <main class="contact-section">
    <form action="/register" method="post" class="contact-form" enctype="multipart/form-data" >
      <div class="form-title">
        <h2>REGISTER</h2>
      </div>
      <div class="form-field mt-3">
        <label for="username">Username</label>
        <input id="username" name="username" class="form-input" type="text" placeholder="Username" required />
      </div>
       <div class="form-field mt-3">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" class="form-input" type="text"  placeholder="email@mail.com"  />
      </div>
       <div class="form-field mt-3">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" class="form-input" type="text"  placeholder="Password ( character)"  />
      </div>    

      <div class="form-button"><button type="submit" class="form-submit-button">Submit</button></div>
    </form>

  

    
  </main>

{{/layout}}