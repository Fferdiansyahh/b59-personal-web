{{#> layout title='Create Project' user=user}}

  <main class="contact-section">
    <form action="/project-add" method="post" class="contact-form" enctype="multipart/form-data">
      <div class="form-title">
        <h2>ADD MY PROJECT</h2>
      </div>
      <div class="form-field">
        <label for="name">Project Name</label>
        <input id="name" name="name" class="form-input" type="text" required />
      </div>

      <div class="form-date">
        <div class="form-field-date">
          <label for="sdate">Start Date</label>
          <input id="sdate" name="sdate" class="form-input-date" type="date" min="2023-01-01" max="2030-12-31"
          value="{{formatNow}}"    required />
        </div>
        <div class="form-field-date">
          <label for="edate">End Date</label>
          <input id="edate" name="edate" class="form-input-date" type="date" min="2023-01-01" max="2030-12-31"
          Value="{{formatNow}}"    required />

        </div>
      </div>

      <div class="form-field-area">
        <label class="message-contact" for="message">Your Message</label>
        <textarea rows="6" id="message" name="message" class="form-input-area" required></textarea>
      </div>

      <div class="form-field-box">
        <div>
          <label>Technologies</label>
        </div>
      </div>
      <div class="form-input-box">
        <div>
          <input type="checkbox" id="" name="technologies" value="nodejs" >
          <label for="nodejs">Node Js</label><br>
          <input type="checkbox" id="" name="technologies" value="nextjs" >
          <label for="nextjs">Next Js</label>
        </div>
        <div>
          <input type="checkbox" id="" name="technologies" value="reachjs"  >
          <label for="reachjs">Reach Js</label><br>
          <input type="checkbox" id="typescript" name="technologies" value="typescript" >
          <label for="TypeScript">TypeScript</label>
        </div>
      </div>

      <div class="form-field-image">       
        <label for="image" class="form-label">Upload Image</label>
          <input id="image" name="image" class="form-control" type="file" accept=".png, .jpg, .jpeg">
      </div>
<div>
<img id="preview" src="#" alt="image preview" class="img-thumbnail d-none" style="max-height: 300px;"></img>
</div>
      <div class="form-button"><button type="submit" class="form-submit-button">Post Project</button></div>
    </form>


  <script src="/asset/js/image-preview.js"></script>

    
  </main>

{{/layout}}